generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  is_admin   Boolean?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("users")
}

model FoodPlates {
  id         String   @id @default(uuid())
  name       String
  price      String
  image      String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("food_plates")
}
