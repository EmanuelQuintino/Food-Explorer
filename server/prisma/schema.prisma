generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Clients {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String

  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("clients")
}
